<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partials/header') %>
    <title>Nuevo Libro</title>
  </head>
  <body>

    <%- include ('partials/nav') %>

    <div class="container p-4 ">
      <form class="card card-body" action="/new-entry" method="POST">
        <div class="form-group">
          <label for="">Titulo</label>
          <input
            type="text"
            class="form-control"
            name="title"
            id="title"
            placeholder="Ingresar nuevo título"
            autofocus
            required />
        </div>
        <div class="form-group">
          <label for="">Autor</label>
          <input
            type="text"
            class="form-control"
            name="author"
            id="author"
            placeholder="Ingresar el autor"
            required />
        </div>
        <div class="form-group">
          <label for="">Descipción</label>
          <textarea
            class="form-control"
            name="description"
            id="description"
            rows="2"
            required />
        </textarea>
        </div>
        <div class="form-group">
          <label for="">Imagen</label>
          <input
            type="text"
            class="form-control"
            name="image"
            id="image"
            placeholder="http://website.com"
            required />
        </div>
        <input type="submit" value="Guardar Libro" class="btn btn-primary">
      </form>
    </div>
  </body>
</html>
